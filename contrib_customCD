#Add this stuff to your bashrc:

mycd(){
  unalias cd
  clear

  if [ $# -ne 1 ]
  then
    cd ~
    echo -e "[\e[01;32m`whoami`@`hostname`:\e[01;34m~\e[00m]$ ls"
  else
    cd $1
    echo -e "[\e[01;32m`whoami`@`hostname`:\e[01;34m${PWD##*/}\e[00m]$ ls"
  fi

  pwd
  ls
  alias cd=mycd
}

alias cd=mycd
alias ls=ls --color=always
