#!/usr/bin/env bash

{{ if eq .chezmoi.os "darwin" }}
brew install -q \
    eza \
    bat \
    just \
    less \
    fzf \
    jq \
    git \
    git-lfs \
    curl \
    neovim \
    ripgrep \
    starship \
    xcodes \
    zsh \
    zoxide \
    mise \
    carapace \
    vivid \
    zellij

declare -a casks=('font-fira-code-nerd-font' 'karabiner-elements' 'nikitabobko/tap/aerospace' 'firefox@developer-edition' 'iterm2' 'vscodium' 'vial')
for c in "${casks[@]}"; do
    brew list --casks | grep "^$c\$" &> /dev/null && continue
    brew install --cask "$c"
done
{{ end }}

{{ if eq .chezmoi.os "linux" }}
if command -v pacman; then
    osname=$(cat /etc/os-release | grep '^ID=' | cut -d= -f2)
    if [[ "$osname" == "cachyos" ]]; then
        paru -Sy --noconfirm \
            nushell \
            gnupg \
            eza \
            bat \
            just \
            fzf \
            jq \
            git-lfs \
            neovim \
            unzip \
            ripgrep \
            starship \
            zoxide \
            zellij \
            mise \
            vivid \
            vscodium
    else
        if ! command -v yay; then
            sudo pacman -S --needed git base-devel
            builddir="$(mktemp -d)"
            git clone https://aur.archlinux.org/paru.git "$builddir"
            pushd "$builddir"
            makepkg -si
            popd
            rm -rf "$yaybuild"
        fi
        paru -Sy --noconfirm \
            nushell \
            gnupg \
            eza \
            bat \
            just \
            fzf \
            jq \
            git-lfs \
            neovim \
            unzip \
            ripgrep \
            starship \
            zoxide \
            zellij \
            mise \
            vivid \
            carapace \
            vscodium-bin
    fi
fi
{{ end }}

