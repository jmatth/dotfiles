{{- $fn := eq .chezmoi.os "darwin" | ternary "fn " "nop0" -}}
{{- $del := eq .chezmoi.os "darwin" | ternary "nop1" "del" -}}
(defvar
{{- if eq .chezmoi.os "darwin" }}
  fn   fn
  ffn  @fn
  lctl lctl
  rctl rctl
{{ else }}
  fn   nop0
  ffn  nop0
  lctl @lftl
  rctl @rftl
{{ end -}}
)

(defcfg
  override-release-on-activation yes   ;; needed for correct output
)

;; Swap or define characters, when key is shifted
;; (defoverrides
