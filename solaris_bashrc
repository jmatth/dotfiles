#export statements
export PATH='/usr/local/gnu/bin:/usr/xpg4/bin:/usr/dt/bin:/usr/openwin/bin:/usr/local/bin:/usr/bin:/usr/ucb:/opt/SUNWspro/bin:/usr/ccs/bin'
