#export statements
export TERM='xterm'
export PATH='/usr/local/gnu/bin:/usr/xpg4/bin:/usr/dt/bin:/usr/openwin/bin:/usr/local/bin:/usr/ucb:/usr/bin:/opt/SUNWspro/bin:/usr/ccs/bin'

#return if not running interactively
[ -z "$PS1" ] && return 

#aliases for ls
alias ls='/usr/local/gnu/bin/ls -hF --color=auto'
alias lsd="ls --color=always -alh"
alias lf="ls --color=always -lh"
alias l="ls"
alias s="l"
alias la="ls -Alh"
alias ll="ls -lh"

#rpm aliases
alias specs="cd ~/rpmbuild/SPECS"
alias src='cd ~/rpmbuild/SOURCES'
alias srpm='cd ~/rpmbuild/SRPMS'
alias rpms='cd ~/rpmbuild/RPMS'
