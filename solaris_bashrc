source ~/dotfiles/bashrc

#export statements
export PATH='/usr/local/gnu/bin:/usr/xpg4/bin:/usr/dt/bin:/usr/openwin/bin:/usr/local/bin:/usr/bin:/usr/ucb:/opt/SUNWspro/bin:/usr/ccs/bin'

#aliases for ls
alias ls='/usr/local/gnu/bin/ls -hF --color=auto'
alias lsd="ls --color=always -alh"
alias lf="ls --color=always -lh"
alias l="ls"
alias s="l"
alias la="ls -Alh"
alias ll="ls -lh"

#program shortcuts
alias bashmod="vim ~/.bashrc"
alias bashsave="source ~/.bashrc"
alias vmod="vim ~/.vimrc"

#aliases for random ops
alias cc="clear"
alias sudo='slide'

#aliases for directory navigation
alias ..="cd .."
alias me="cd ~;ls"
alias testbuild="sudo mock -v --rebuild "
alias specs="cd ~/rpmbuild/SPECS"
alias src='cd ~/rpmbuild/SOURCES'
alias srpm='cd ~/rpmbuild/SRPMS'
alias rpms='cd ~/rpmbuild/RPMS'

#ssh aliases
alias opus5='ssh opus5'
alias sauron='ssh sauron'

#program settings variables
export GREP_OPTIONS='--color=auto'
